<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/22" fx:controller="Controllers.OrderHistoryController">
    <top>
        <AnchorPane prefHeight="70.0" prefWidth="800.0" style="-fx-background-color: FFCF83;">
            <Button fx:id="btnLogout" layoutX="703.0" layoutY="19.0" onAction="#goToLogout" prefHeight="32.0" prefWidth="68.0" style="-fx-background-color: black;" text="Log Out" textFill="WHITE">
            <font>
               <Font name="Arial Bold" size="13.0" />
            </font></Button>
            <Button fx:id="btnDashboard" layoutX="612.0" layoutY="19.0" onAction="#goToDashboard" prefHeight="32.0" prefWidth="70.0" style="-fx-background-color: black;" text="Go Back" textFill="WHITE">
            <font>
               <Font name="Arial Bold" size="13.0" />
            </font></Button>
        </AnchorPane>
    </top>
    <center>
        <TableView fx:id="orderTable" prefHeight="500.0" prefWidth="600.0" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="orderIdColumn" text="Order ID" />
                <TableColumn fx:id="orderDateColumn" text="Date" />
                <TableColumn fx:id="totalPriceColumn" text="Total Price" />
                <TableColumn fx:id="viewColumn" text="View" />
                <TableColumn fx:id="exportColumn" text="Export" />
            </columns>
        </TableView>
    </center>
</BorderPane>
