<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/22" fx:controller="Controllers.ViewOrderController">

    <!-- Top Area for Buttons -->
    <top>
        <VBox alignment="CENTER" spacing="10">
            <Button fx:id="btndashboard" onAction="#goToDashboard" text="Dashboard" />
            <Button fx:id="btnlogout" onAction="#goToLogOut" text="Logout" />
        </VBox>
    </top>

    <!-- Center Area for Orders -->
    <center>
        <VBox alignment="CENTER" spacing="10">
            <Label text="Orders" />
            <ListView fx:id="ordersListView" />
            <Label fx:id="orderDetailsLabel" wrapText="true" />
        </VBox>
    </center>

</BorderPane>
